{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "checkJs": true,
    "paths": {
      "@/*": ["./*"]
    }
   
  },
  "exclude": ["node_modules", ".next"]
}

